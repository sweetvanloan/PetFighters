enum class Gender { Male, Female };

class Pet {
private:
    std::string name;
    Gender gender;
    int health;
    int happiness;
    int level;
    // Other attributes...

public:
    // Constructor
    Pet(std::string petName, Gender petGender) : name(petName), gender(petGender), health(100), happiness(100), level(1) {}

    // Getter for gender
    Gender getGender() const {
        return gender;
    }

    // Other methods...
};

// working on HP
#include "Pet.h"

// Constructor and other existing methods...

void Pet::increaseHP(int amount) {
    currentHP = std::min(currentHP + amount, enhancedMaxHP);
}

void Pet::decreaseHP(int amount) {
    currentHP = std::max(currentHP - amount, 0);
}

void Pet::enhanceMaxHP(int amount) {
    enhancedMaxHP += amount;
    if (enhancedMaxHP > baseMaxHP) {
        baseMaxHP = enhancedMaxHP;
    }
}

int Pet::getCurrentHP() const {
    return currentHP;
}

int Pet::getMaxHP() const {
    return enhancedMaxHP;
}
